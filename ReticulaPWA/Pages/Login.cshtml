@page "/login"
@model ReticulaPWA.Pages.Shared.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no">
    <link rel="stylesheet" href="~/css/estilos.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500&display=swap" rel="stylesheet">
    <link rel="shortcut icon"
          href="~/assets/logos/Logo144x144.png"
          type="image/x-icon" />
    <link rel="manifest" href="~/manifest.json" />
    <title>Login</title>
    <style>
        body {
            font-family: "Montserrat", system-ui,sans-serif;
        }

    </style>
</head>
<body>
    <main class="main">
        <div class="login">
            <div class="login__imagenes">
                <img src="~/assets/img/logo2.png" alt="logo" class="login__img" />
                <img src="~/assets/img/logo1.jpg" alt="logo" class="login__img" />
            </div>

            <form class="login__form">
                <h1 class="form__titulo">Avance Reticular</h1>
                
                <p class="form__descripcion">
                    Introduce los siguientes datos para iniciar sesión
                </p>
               
                <input type="text"
                       placeholder="Número de control"
                       class="form__input"
                       id="numControltxt"
                       required />

               
                <input type="password" 
                    placeholder="Contraseña" 
                    class="form__input" 
                    id="passwordtxt" required />


                <input type="submit"
                       value="Ingresar"
                       class="form__submit"
                       id="btnIngresar" />

                <p class="form__errores">
                </p>

                <div id="loader">
                    <div class="spinner"></div>
                </div>

            </form>
        </div>
    </main>
    <script>
          const registerServiceWorker = async () => {
            if ("serviceWorker" in navigator) {
                try {
                    await navigator.serviceWorker.register("/serviceworker.js?v=8");
                } catch (error) {
                    console.error(`Falló el registro con el ${error}`);
                }
            }
        };

        registerServiceWorker();
    </script>
    <script src="~/scripts/login.js?v=6"></script>
</body>
</html>

